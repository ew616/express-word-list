<h1 class='text-center'>{{title}}</h1>

<form action='/api/words' method='POST' class='mb-4'>
    <div class='form-group'>
        <label for='span'>Spanish</label>
        <input type='text' name='span' class='form-control'>
    </div>

    <div class='form-group'>
        <label for='eng'>English</label>
        <input type='text' name='eng' class='form-control'>
    </div>

    <input type="submit" value="Add Word" class='btn-primary btn block'>
</form>

<form action='/about.html' method='get' class='mb-4'>
    <input type="submit" value="Test Yourself!" class='btn-primary btn block'>
</form>

<h4>Words</h4>
<ul class='list-group'>
    {{#each words}}
        <li class='list-group-item'>{{this.span}}: {{this.eng}}</li>
    {{/each}}
</ul>